<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/background_br_dialog_updown" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/br_diner_header" android:layout_width="620dp" android:layout_height="40dp">
        <TextView android:textSize="16sp" android:textColor="@color/common_signin_btn_dark_text_default" android:gravity="center" android:id="@+id/title_name_dinner_dialog" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/dinner_dialog_title_name_dialog" android:fontFamily="@font/muller_bold" android:layout_marginStart="20dp"/>
        <Button android:id="@+id/close_button_dinner_dialog" android:background="@drawable/br_diner_close" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="5dp" android:layout_centerVertical="true" android:layout_marginEnd="25dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <HorizontalScrollView android:layout_width="match_parent" android:layout_height="180dp" android:layout_margin="20dp">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/list_items_food_dinner_dialog" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </RelativeLayout>
    </HorizontalScrollView>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginBottom="16dp" android:weightSum="5" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
        <RelativeLayout android:gravity="center" android:background="@drawable/br_diner_line" android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="3.3">
            <TextView android:textSize="15sp" android:textColor="@color/common_signin_btn_dark_text_default" android:gravity="center" android:id="@+id/br_diner_title_price_sum" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/dinner_dialog_title_price_sum" android:fontFamily="@font/muller_bold" android:layout_marginEnd="5dp"/>
            <TextView android:textSize="15sp" android:textColor="@color/orange_bold_price" android:gravity="center" android:id="@+id/br_diner_value_price_sum" android:layout_width="wrap_content" android:layout_height="match_parent" android:fontFamily="@font/muller_bold" android:layout_toEndOf="@+id/br_diner_title_price_sum"/>
            <TextView android:textSize="15sp" android:textColor="@color/common_signin_btn_dark_text_default" android:gravity="center" android:id="@+id/br_diner_currency_price_sum" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/dinner_dialog_currency_price_sum" android:fontFamily="@font/muller_bold" android:layout_marginStart="5dp" android:layout_toEndOf="@+id/br_diner_value_price_sum"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/br_diner_purchase_button" android:background="@drawable/br_rent_but" android:focusable="true" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.7" android:alpha="0.5">
            <TextView android:textSize="15sp" android:textColor="@color/common_signin_btn_dark_text_default" android:gravity="center" android:id="@+id/textView10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/dinner_dialog_button_title_text" android:drawablePadding="10dp" android:layout_centerInParent="true" android:fontFamily="@font/muller_bold" app:drawableStartCompat="@drawable/br_diner_purchase_icon"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
