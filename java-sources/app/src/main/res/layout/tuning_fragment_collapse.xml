<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <Button android:id="@+id/button_reset_collapse" android:background="@drawable/tuning_button_reset" android:visibility="visible" android:layout_width="45dp" android:layout_height="45dp" android:layout_marginTop="10dp" android:layout_alignParentEnd="true"/>
    <LinearLayout android:gravity="center" android:layout_gravity="end" android:orientation="vertical" android:id="@+id/menu_block_collapse" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_above="@+id/seekbar_collapse" android:layout_marginEnd="27dp" android:layout_alignParentEnd="true">
        <TextView android:textStyle="bold" android:textColor="@color/white" android:id="@+id/title_price_block_collapse" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tuning_title_buttons_block" android:textAllCaps="true"/>
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/tuning_price_collapse" android:background="@drawable/tuning_bg_button_back" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp">
            <TextView android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/tuning_value_price_collapse" android:layout_width="wrap_content" android:layout_height="match_parent" app:layout_constraintEnd_toStartOf="@+id/tuning_currency_collapse" app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintStart_toStartOf="@+id/tuning_price_collapse"/>
            <TextView android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/tuning_currency_collapse" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginStart="5dp" app:layout_constraintEnd_toEndOf="@+id/tuning_price_collapse" app:layout_constraintStart_toEndOf="@+id/tuning_value_price_collapse"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button android:textColor="@color/white" android:id="@+id/back_to_submenu_collapse" android:background="@drawable/tuning_bg_black_button_back" android:layout_width="wrap_content" android:layout_height="40dp" android:text="@string/tuning_button_back" android:drawablePadding="10dp" android:textAllCaps="true" android:drawableStart="@drawable/tuning_back" android:paddingStart="10dp" android:paddingEnd="10dp"/>
    </LinearLayout>
    <Button android:id="@+id/button_view_car_collapse" android:background="@drawable/tuning_view_car_res" android:layout_width="55dp" android:layout_height="55dp" android:layout_marginBottom="10dp" android:layout_above="@+id/seekbar_collapse" android:layout_marginStart="27dp"/>
    <RelativeLayout android:id="@+id/seekbar_collapse" android:visibility="visible" android:layout_width="400dp" android:layout_height="80dp" android:layout_marginBottom="20dp" android:layout_alignParentBottom="true" android:layout_centerInParent="true">
        <View android:id="@+id/bg_seekbar_collapse" android:background="@drawable/tuning_bg_seekbar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:textColor="@color/white" android:id="@+id/seekbar_title_collapse" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginStart="40dp"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/value_this_corner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/seekbar_title_collapse" android:layout_marginEnd="40dp" android:layout_alignParentEnd="true"/>
        <SeekBar android:id="@+id/tuning_seekbar_collapse" android:layout_width="match_parent" android:layout_height="15dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:max="100" android:progressDrawable="@drawable/tuning_seekbar_progress" android:thumb="@drawable/tuning_seekbar_thumb" android:layout_alignParentBottom="true" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    </RelativeLayout>
</RelativeLayout>
