<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <ProgressBar android:id="@+id/progressBar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/header" android:layout_centerHorizontal="true" style="?android:attr/progressBarStyle"/>
    <TextView android:textColor="#ffffff" android:id="@+id/header" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginBottom="15dp" android:text="ОЖИДАЙТЕ НАЧАЛА ИГРЫ" android:layout_above="@+id/info" android:layout_centerHorizontal="true" android:fontFamily="@font/montserrat_bold"/>
    <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="30dp" android:text="Игроков в очереди: 777" android:layout_above="@+id/button" android:layout_centerHorizontal="true" android:fontFamily="@font/montserrat_regular"/>
    <Button android:textColor="#ffffff" android:id="@+id/button" android:background="@drawable/donate_tile_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="30dp" android:minWidth="140dp" android:text="ОТМЕНА" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:fontFamily="@font/muller_bold"/>
</RelativeLayout>
