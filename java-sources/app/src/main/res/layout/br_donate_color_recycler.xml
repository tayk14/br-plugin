<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:padding="5dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/frame" android:padding="1dp" android:layout_width="35dp" android:layout_height="35dp">
        <View android:layout_gravity="center" android:id="@+id/color" android:background="#00ff00" android:layout_width="28dp" android:layout_height="28dp"/>
        <Button android:id="@+id/border" android:background="@drawable/border_button_gray" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
    <FrameLayout android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp">
        <TextView android:textSize="7sp" android:textColor="#ffffff" android:layout_gravity="center_vertical" android:id="@+id/paid" android:background="@drawable/red_badge" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+250 BC" android:fontFamily="@font/muller_bold"/>
        <TextView android:textSize="7sp" android:textColor="#ffffff" android:layout_gravity="center_vertical" android:id="@+id/free" android:background="@drawable/navy_badge" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="бесплатно" android:textAllCaps="true" android:fontFamily="@font/muller_bold"/>
    </FrameLayout>
</LinearLayout>
