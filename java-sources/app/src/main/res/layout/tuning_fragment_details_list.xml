<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <Button android:id="@+id/button_reset_detail" android:background="@drawable/tuning_button_reset" android:visibility="visible" android:layout_width="45dp" android:layout_height="45dp" android:layout_marginTop="10dp" android:layout_alignParentEnd="true"/>
    <View android:id="@+id/help_view_above_list_in_detail_list" android:layout_width="0dp" android:layout_height="0dp" android:layout_above="@+id/title_details_list" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true"/>
    <LinearLayout android:gravity="center" android:layout_gravity="end" android:orientation="vertical" android:id="@+id/menu_block_detail" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/help_view_above_list_in_detail_list" android:layout_toStartOf="@+id/help_view_above_list_in_detail_list">
        <TextView android:textStyle="bold" android:textColor="@color/white" android:id="@+id/title_price_block_details" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tuning_title_buttons_block" android:textAllCaps="true"/>
        <Button android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/tuning_price_detail" android:background="@drawable/tuning_bg_button_back" android:layout_width="150dp" android:layout_height="40dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="@string/tuning_title_button_info" android:drawablePadding="10dp" android:textAllCaps="true" android:drawableStart="@drawable/tuning_icon_box_white" android:paddingStart="10dp" android:paddingEnd="10dp"/>
        <Button android:textColor="@color/white" android:id="@+id/back_to_submenu_detail" android:background="@drawable/tuning_bg_black_button_back" android:layout_width="150dp" android:layout_height="40dp" android:text="@string/tuning_button_back" android:drawablePadding="10dp" android:drawableStart="@drawable/tuning_back" android:paddingStart="10dp" android:paddingEnd="10dp"/>
    </LinearLayout>
    <ImageView android:id="@+id/button_info_brake" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginBottom="10dp" android:src="@drawable/tuning_button_info" android:layout_alignBottom="@+id/title_details_list" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/title_details_list"/>
    <Button android:id="@+id/button_view_car_details_list" android:background="@drawable/tuning_view_car_res" android:layout_width="55dp" android:layout_height="55dp" android:layout_marginBottom="15dp" android:layout_above="@+id/title_details_list" android:layout_marginStart="20dp"/>
    <TextView android:textStyle="bold" android:textColor="@color/white" android:id="@+id/title_details_list" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:layout_above="@+id/recv_details_list" android:textAllCaps="true" android:layout_marginStart="20dp"/>
    <androidx.recyclerview.widget.RecyclerView android:scrollbarThumbHorizontal="@drawable/tuning_scroll_detail_thumb" android:scrollbarTrackHorizontal="@drawable/tuning_scroll_detail_track" android:id="@+id/recv_details_list" android:visibility="visible" android:scrollbars="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_alignParentBottom="true" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <View android:id="@+id/help_view_in_detail_list" android:layout_width="0dp" android:layout_height="0dp" android:layout_marginBottom="25dp" android:layout_alignParentBottom="true" android:layout_marginEnd="27dp" android:layout_alignParentEnd="true"/>
</RelativeLayout>
