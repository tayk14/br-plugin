<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="27dp" android:layout_marginBottom="5dp" android:layout_marginEnd="30dp">
    <View android:id="@+id/background_item" android:background="@drawable/players_list_border_item" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/player_id" android:layout_width="10dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_marginStart="20dp"/>
        <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/player_name" android:layout_width="45dp" android:layout_height="match_parent" android:layout_weight="5"/>
        <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/player_level" android:layout_width="20dp" android:layout_height="match_parent" android:layout_weight="3"/>
        <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/player_ping" android:layout_width="20dp" android:layout_height="match_parent" android:layout_weight="2"/>
    </LinearLayout>
</RelativeLayout>
