<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#aa000000">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#aa000000"/>
            <corners android:radius="1dp" android:topLeftRadius="20dp" android:topRightRadius="0dp" android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp"/>
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ff6317" android:endColor="#c50000" android:angle="0" android:type="linear"/>
            <corners android:radius="1dp" android:topLeftRadius="20dp" android:topRightRadius="0dp" android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp"/>
        </shape>
    </item>
</ripple>
